<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <!--视频类型时为标题-->
        <TextView
            android:id="@+id/tv_item_baisi_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="title"
            style="@style/item_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_item_baisi_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/jc_item_baisi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_baisi_profile_image"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:maxWidth="200dp"
            android:layout_marginRight="12dp"
            android:id="@+id/tv_baisi_profile_name"
            android:text="name"
            android:layout_toRightOf="@id/iv_baisi_profile_image"
            style="@style/item_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/tv_item_baisi_hate"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:textColor="#aa000000"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/tv_item_baisi_hate"
            android:src="@drawable/icon_discover_normal"
            android:id="@+id/iv_item_baisi_hate"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tv_item_baisi_love"
            android:layout_marginRight="15dp"
            android:textSize="18sp"
            android:textColor="#aa000000"
            android:layout_toLeftOf="@id/iv_item_baisi_hate"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/tv_item_baisi_love"
            android:src="@drawable/icon_discover_normal"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </RelativeLayout>

</LinearLayout>