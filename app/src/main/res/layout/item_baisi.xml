<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--视频类型时为标题-->
            <TextView
                android:id="@+id/tv_item_baisi_text"
                style="@style/item_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="title"/>

            <ImageView
                android:id="@+id/iv_item_baisi_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/jc_item_baisi"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_baisi_profile_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/tv_baisi_profile_name"
                style="@style/item_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@id/iv_baisi_profile_image"
                android:maxWidth="120dp"
                android:text="name"/>

            <TextView
                android:id="@+id/tv_item_baisi_hate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:text="0"
                android:textColor="#aa000000"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/iv_item_baisi_hate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/tv_item_baisi_hate"
                android:src="@drawable/icon_discover_normal"/>

            <TextView
                android:id="@+id/tv_item_baisi_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/iv_item_baisi_hate"
                android:text="0"
                android:textColor="#aa000000"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/tv_item_baisi_love"
                android:src="@drawable/icon_discover_normal"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>